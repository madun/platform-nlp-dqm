# ========================================
# Memphis Backend Environment Variables
# ========================================

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/memphis"

# Server
PORT=3001
NODE_ENV=development

# Scraper
HEADLESS=true
SCRAPER_RATE_LIMIT_MIN=2000
SCRAPER_RATE_LIMIT_MAX=5000
MAX_TWEETS_PER_RUN=100
QUALITY_THRESHOLD=0.6

# Twitter (optional - for authenticated requests)
# TWITTER_USERNAME=
# TWITTER_PASSWORD=
# TWITTER_EMAIL=

# Scheduler
CRON_SCHEDULE="0 */6 * * *"

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Target
DAILY_TARGET=50
